<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> 
</head>


<!-- top of the page, bootstrap navigation bar -->
<body>


<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">First Aid Bracelet</a>
    </div>
    <ul class="nav navbar-nav">
      <form name="loginForm" action = "/logged" method = "post">
			<input type="hidden" name="currentUser" value=<%=user%>>
			<input type="hidden" name="type" value=<%=type%>>
			<button class="btn btn-default navbar-btn" type="submit">Admin Page</button>
        </form>
    </ul>
	<ul class="nav navbar-nav navbar-right">
		<li><a href="/login"> Back To Login</a></li>
	</ul>
  </div>
</nav>  


<div class="row">
  <div class="col-md-1"></div>
  <!-- Database Treatments in MongoDB -->
  <div class="col-md-11">
    <h1> Insert new item </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-10">
  <!-- adding all the fields to Database posts back to index.js, where we are adding 
  the item to the database using MongoDB functions -->

  <form action="/admin" method="POST">
    Enter here: 
    <input type="text" name="name" placeholder="name" id="name">
    <input type="text" name="type" id="type" placeholder="type">
    <input type="text" name="itemId" id="itemId" placeholder="identification">
    <button type="submit">Submit</button> 
  </form>

  </div>
</div>

<!-- shows the database Treatments (name and picture)-->

<div class="row">

  <div class="container">
      <div class="row">
        <div class="col-md-1"></div>
        <!-- Database Treatments in MongoDB -->
        <div class="col-md-11">
          <h1>Treatments</h1>
        </div>
      </div>
   
      <div class="row">
        <div class="col-md-2"></div> 
        <div class="col-md-10">
        <!-- <ul id="treatments" class="list-group">
            <% docs.forEach(function(doc) { %> 
            <a href="#" data-toggle="popover" class="list-group-item" data-html="true" data-content="<img src='https://firstaidbracelet.herokuapp.com/medic-logo.png />">    Name:<%= doc.name%>    Type:<%= doc.type%>    Id:<%= doc.equipment_id%> </a>
            <% }); %>  
        </ul> -->

        <table class="table table-striped">
              <thead>
                  <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Id</th>
                  </tr>
               </thead>  
               <tbody>
                  <% docs.forEach(function(doc) { %>
                  <tr>
                      <td><%= doc.name%> </td>
                      <td><%= doc.type%> </td>
                      <td><%= doc.equipment_id%> </td>
                  </tr>
                    <% }); %>
                </tbody>          
        </table>

        </div>
      </div>
  </div>

</div>

<div class="row"><h1></h1></div>
<div class="row">""</div>
<div class="row">""</div>

