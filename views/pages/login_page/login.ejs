<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Login page stylesheet -->
    <link rel="stylesheet" href="/stylesheets/doctorStyles.css">
    <!-- Bootstrap scripts and stylesheet for stylizing page and form -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>

    <!-- Navigation bar leading only to login page -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
	      <a class="navbar-brand" href="/login">Login</a>
        </div>
      </div>
    </nav>  

    <!-- Login script -->
    <script src="/views/pages/login_page/login.js"></script>

    <!-- Turn nodejs parameters to variables so that the map script will be able to interact with them  -->
	<script>
	    var usersArray = [];
	    <% docs.forEach(function(doc) { %>
		    usersArray.push(<%- JSON.stringify(doc) %>);
	    <% }); %>
	</script>

    <!-- Page header -->
    <div class="page-header">
	    <center><h2> Login <br> </h2></center>
    </div>

    <!-- Login icon -->
    <div class="imgcontainer">
	    <img src="/cas-padlock-icon.png" alt="Login" class="avatar" style="width:128px;height:128px;">
    </div>

    <!-- Login Form -->
    <div class = "container">
        <form name="loginForm" action = "/logged" method = "post" onsubmit="return validateForm()">
            <!-- Username field -->
	        <div class="form-group">
		        <label><b>Username</b></label>
		        <input type="text" class = "form-control" placeholder="Enter Username" name="currentUser" required>
	        </div>

            <!-- Password field -->
            <div class="form-group">
		        <label><b>Password</b></label>
		        <input type="password" class = "form-control" placeholder="Enter Password" name="psw" required>
	        </div>
	        
            <!-- submit button -->
            <input type="submit" class="btn btn-primary" value="Login">
        </form>
    </div>

</body>
</html>
